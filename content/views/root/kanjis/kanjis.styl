.allKanji
	text-align center
	td
		border 1px solid #000
		// width 100px 
		// height 100px 
		border 1px solid #000
		font-size 20px
		cursor pointer


.kanji-card
	position absolute
	top 0
	z-index 10
	background #FFF 
	border border
	text-align center
	font-size 15px
	line-height 1.20
	display inline-block
	div
		position relative
	.close
		border 2px solid #000
		border-top none 
		border-right none
		margin 0
		font-size 21px
		background #FFF 
		color #000 
		position absolute
		top 0
		right 0
		z-index 11 
		text-shadow textBorder
		cursor pointer
		@extend .trsm
		&:hover
			background #000
	.left
		border-right border
		float left
		width (width / 6.1 + 1) 
	.info
		border-top border
		border-bottom border
		div
			position relative
			border-bottom border
			p, h4
				padding 1px
				margin 0px
			p
				font-weight bold
				font-size 17px
	.right
		display inline-block
		div, h4, p
			border-bottom border
		.field
			position relative
			border none
		div, h3
			border-bottom border
			p, h4, h3
				padding 1px
				margin 0px
			p
				font-weight bold
				font-size 17px

#modIcon
	position absolute
	top 0
	right 0
	z-index 10

#changeKanji
	position absolute
	left 0
	z-index 2
	button
		position absolute
		top 26px
		left 0 
	input
		width 100%
		text-align center